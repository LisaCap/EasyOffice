    <!--Formulaire d'inscription-->
    <div class="container big-box">
        <div class="container box-titre">
            <div class="row">
                <div class="titre font-weight-bold">Inscription</div>
            </div>
        </div>

        <div class="box-register row align-items-center">
            <div class="col-md-6 rounded-0">
                <!-- form card login -->
                {{ form_start(form) }}

                {#formulaire bootstrap#}

                <div class="form-group">
                    {{ form_row(form.nomMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.prenomMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.nomDeSocieteMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.siretMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.tvaMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.dateDeNaissance, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    <div class="form-check form-check-inline">
                        {{ form_row(form.sexeMembre, {attr: {class: "form-check-input rounded-0"} }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_row(form.adresseMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>



            </div><!-- fin du col-md-6 -->

            <div class="col-md-6">

                <div class="form-group">
                    {{ form_row(form.cpMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.villeMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.telephoneMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.idStatutMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.emailMembre, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.passwordMembre.first, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.passwordMembre.second, {attr: {class: "form-control rounded-0 border border-secondary"} }) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.photoMembre, {attr: {class: "form-control rounded-0"} }) }}
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                </div>
                {{ form_end(form) }}




            </div><!-- fin du col-md-6 -->
        </div><!-- fin du row -->
    </div><!-- fin du container -->

{% endblock %}
    {#FIN DE MAIN#}

    {#SCRIPT#}
    {% block javascripts %}{% endblock %}
{#FIN DE SCRIPT#}