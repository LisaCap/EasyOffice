{# templates/public/template.html.twig #}

{% extends 'base.html.twig' %}

{#HEAD#}
    {% block title %} {{ title }} {% endblock %}
    {% block meta_description %}Le truc qui apparait dans les recherches google{% endblock %}
    {% block stylesheets %}{% endblock %}

{#FIN DE HEAD#}

{#HEADER#}
    {% block h1 %} Inscription {% endblock %}
    {% block introduction %} Pour vous inscrire chez Easy Office, merci de remplir ce formulaire {% endblock %}
    {% block option_introduction %}{% endblock %}
{#FIN DE HEADER#}

{#MAIN#}
{% block main %}
        <!--Formulaire d'inscription-->
        <div class="row">
           <div class="col-sm-3" ></div>
            <div class="col-sm-6">
                {#
                    affichage des messages flash
                    
                    {% for message in app.flashes('message') %}
                        <div class="alert alert-success text-center">
                            {{ message }}
                        </div>
                    {% endfor %}
                #}
            </div>
        </div>
        
        <div class="row">
        
            <div class= "col-sm-6">
                <fieldset>
                    <legend>Inscription</legend>

                        {{ form_start(form) }}

                        {#formulaire bootstrap#}

                        <div class="form-group">
                            {{ form_row(form.nomMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.prenomMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.nomDeSocieteMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.siretMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.tvaMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.dateDeNaissance, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            <div class="form-check form-check-inline">  
                                {{ form_row(form.sexeMembre, {attr: {class: "form-check-input"} }) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_row(form.adresseMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.cpMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.villeMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.telephoneMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">  
                            {{ form_row(form.idStatutMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.emailMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.passwordMembre.first, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.passwordMembre.second, {attr: {class: "form-control"} }) }}
                        </div>           

                        <div class="form-group">
                            {{ form_row(form.photoMembre, {attr: {class: "form-control"} }) }}
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success">Valider</button>
                        </div>

                        <div class="form-group">
                             {{ form_end(form) }}
                        </div>

                    </fieldset>

                </div><!--fin du class=col-sm-6-->
        </div><!--fin du row-->

    {% endblock %}
{#FIN DE MAIN#}

{#SCRIPT#}
    {% block javascripts %}{% endblock %}
{#FIN DE SCRIPT#}