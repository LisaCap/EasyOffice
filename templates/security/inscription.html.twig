{# templates/public/template.html.twig #}

{% extends 'base.html.twig' %}

{#HEAD#}
    {% block title %}  {{ title }} {% endblock %}
    {% block meta_description %}Inscription Ã  EasyOffice{% endblock %}
    {% block stylesheets %}
        <link href="{{ asset('css/inscription.css') }}" rel="stylesheet">
    {% endblock %}

{#FIN DE HEAD#}

{#HEADER#}
    {% block header %} {% endblock %}
{#FIN DE HEADER#}

{#MAIN#}
{% block main %}

