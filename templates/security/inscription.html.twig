{# formTest.html.twig#}
{# on appelle ce fichier via notre TestController.php#}


{% extends 'base.html.twig' %}
{# il retoutre le fichier même si on est pas dans le même dossier, il remonte au dossier parent. Par contre si il etait dans un autre sous dossier, il faudrait le repreciser#}

{% block title %} Formulaire d'inscription {% endblock %}

{% block body %}
   


<div class="row">
  
   <div class="col-sm-3">
       
          {# affichage des messages flash
            {% for message in app.flashes('message') %}
                <div class="alert alert-success text-center">
                    {{ message }}
                </div>
            {% endfor %}
          #}
   </div>
   
   <div class= "col-sm-6">
      
       <fieldset>
           <legend>Inscription</legend>
            
                {{ form_start(form) }}
                {# form_start c'est comme une ouverture de balise form #}

                {# {{ form_widget(form) }}  le basic de symfony#}

                {#formulaire bootstrap#}
                
                <div class="form-group">

                    {{ form_row(form.prenomMembre, {attr: {class: "form-control"} }) }}

                </div>

                <div class="form-group">

                    {{ form_row(form.nomClient, {attr: {class: "form-control"} }) }}

                </div>

                <div class="form-group">

                    {{ form_row(form.emailClient, {attr: {class: "form-control"} }) }}

                </div>

                <div class="form-group">

                    {{ form_row(form.passwordClient.first, {attr: {class: "form-control"} }) }}

                </div>
                
                <div class="form-group">

                    {{ form_row(form.passwordClient.second, {attr: {class: "form-control"} }) }}

                </div>
                
                <div class="form-group">
                    <div class="form-check form-check-inline">  
                        {{ form_row(form.civiliteClient, {attr: {class: "form-check-input"} }) }}
                    </div>

                </div>
                
                <div class="form-group">

                    {{ form_row(form.adresseClient, {attr: {class: "form-control"} }) }}

                </div>
                
                <div class="form-group">

                    {{ form_row(form.cpClient, {attr: {class: "form-control"} }) }}

                </div>
                
                <div class="form-group">

                    {{ form_row(form.villeClient, {attr: {class: "form-control"} }) }}

                </div>
                
                <div class="form-group">

                    {{ form_row(form.telClient, {attr: {class: "form-control"} }) }}

                </div>
                
                 <div class="form-group">
                    <div class="form-check form-check-inline">  
                        {{ form_row(form.newsletterClient, {attr: {class: "form-check-input"} }) }}
                    </div>

                </div>
                
                <div class="form-group">
                     {{ form_end(form) }}
                    {# form_end c'est comme une fermeture de balise form #}
                    {# form a été defini dans notre controller, via la fonction formTest où on a créer la variable $form #}
               </div>

           
        </fieldset>
       
   </div>
    
</div>
        
       

{% endblock %}


