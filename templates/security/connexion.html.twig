{# formTest.html.twig#}
{# on appelle ce fichier via notre TestController.php#}


{% extends 'base.html.twig' %}
{# il retoutre le fichier même si on est pas dans le même dossier, il remonte au dossier parent. Par contre si il etait dans un autre sous dossier, il faudrait le repreciser#}

{% block title %} {{title}} {% endblock %}

{% block body %}
   


<div class="row">
  
   <div class="col-sm-3">
       
          {# affichage des messages d'erreurs#}
            {% if error %}
                <div class="alert alert-danger text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
   </div>
   
   <div class= "col-sm-6">
      
       <fieldset>
           <legend>Connexion</legend>
            
               <form action="{{ path('connexion') }}" method="post">
                   <div class="form-group">
                      <label for="email">
                          Email : 
                      </label>
                      <input type="text" name ="_email" values="{{ last_username }}" class="form-control">
                   </div>
                   
                   <div class="form-group">
                      <label for="password">
                          Mot de passe : 
                      </label>
                      <input type="password" name ="_password" class="form-control">
                   </div>
                   
                   {##}
                   
                   <div class="form-group text-center">
                       <button type="submit" class="btn btn-success">Connexion</button>
                   </div>
               </form>

           
        </fieldset>
       
   </div>
    
</div>
        
       

{% endblock %}


