{# templates/public/template.html.twig #}

{% extends 'base.html.twig' %}

{#HEAD#}
    {% block title %} {{ title }} {% endblock %}
    {% block meta_description %}Connexion Ã  EasyOffice{% endblock %}
    {% block stylesheets %}
        <link href="{{ asset('css/connexion.css') }}" rel="stylesheet">
    {% endblock %}

{#FIN DE HEAD#}

{#HEADER#}
    {% block header %} {% endblock %}
{% block searchbar %} {% endblock %}
{#FIN DE HEADER#}

{#MAIN#}
{% block main %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-4">

                {# affichage des messages d'erreurs#}
                {% if error %}
                    <div class="alert alert-danger text-center">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
            </div>

            <div class="col-sm-5">
                <!-- form card login -->
                <div class="card rounded-0 shadow-lg p-3 mb-5">
                    <div class="card-header">
                        <h3 class="mb-0">Connexion</h3>
                    </div>
                    <div class="card-body">
                        <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                            <div class="form-group">
                                <label for="uname1">Email :</label>
                                <input type="text" name ="_username" values="{{ last_username }}" class="form-control form-control-lg rounded-0 border-right-0 border-top-0 border-left-0 border border-success font-weight-bold" name="uname1" id="uname1" required="" placeholder="Email">
                                <div class="invalid-feedback">Oops, email invalide</div>
                            </div>
                            <div class="form-group second-box">
                                <label>Mot de passe :</label>
                                <input type="password" name ="_password" class="border-right-0 border-top-0 border-left-0 border border-success font-weight-bold form-control form-control-lg rounded-0" id="pwd1" required="" autocomplete="new-password" placeholder="Mot de passe">
                                <div class="invalid-feedback">Entrer votre mot de passe!</div>
                            </div>
                            <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Login</button>
                        </form>
                    </div>
                    <!--/card-block-->
                </div>
                <!-- /form card login -->
            </div>

        </div>
    </div>

{% endblock %}
{#FIN DE MAIN#}

{# SCRIPT #}
    {% block javascripts %}{% endblock %}
{# FIN DE SCRIPT #}