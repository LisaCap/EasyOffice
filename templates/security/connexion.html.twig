{# templates/public/template.html.twig #}

{% extends 'base.html.twig' %}

{#HEAD#}
    {% block title %} {{ title }} {% endblock %}
    {% block meta_description %}Le truc qui apparait dans les recherches google{% endblock %}
    {% block stylesheets %}{% endblock %}

{#FIN DE HEAD#}

{#HEADER#}
    {% block h1 %} Connexion {% endblock %}
    {% block introduction %} L'introduction {% endblock %}
    {% block option_introduction %}{% endblock %}
{#FIN DE HEADER#}

{#MAIN#}
{% block main %}
      
    <div class="row">
        <div class="col-sm-3">

              {# affichage des messages d'erreurs#}
                {% if error %}
                    <div class="alert alert-danger text-center">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
        </div>
   
        <div class= "col-sm-6">

           <fieldset>
               <legend>Connexion</legend>

                   <form action="{{ path('connexion') }}" method="post">
                       <div class="form-group">
                          <label for="username">
                              Email : 
                          </label>
                          <input type="text" name ="_username" values="{{ last_username }}" class="form-control">
                       </div>

                       <div class="form-group">
                          <label for="password">
                              Mot de passe : 
                          </label>
                          <input type="password" name ="_password" class="form-control">
                       </div>

                       <div class="form-group text-center">
                           <button type="submit" class="btn btn-success">Connexion</button>
                       </div>
                   </form>
            </fieldset>
       </div>
    </div>
       

{% endblock %}
{#FIN DE MAIN#}

{#SCRIPT#}
    {% block javascripts %}{% endblock %}
{#FIN DE SCRIPT#}