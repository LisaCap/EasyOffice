                        <p> Location de salle en ligne </p>
                        {#FIN DE HEADER#}
                        <p class="intro-text"></p>
                    </div>
                </div>
            </div>

            {# BEGIN SEARCHBAR #}
            {% block searchbar %}

                <div class="row">
                    <div class="index">
                        <div class="container searchbox">
                            <div class="input-group">
                                <div class="selector">
                                    <input type="text" placeholder="Où?" aria-label="ou" aria-describedby="basic-addon2">
                                    <div class="picto">
                                        <i class="fas fa-map-marker fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group">
                                <div class="selector">
                                    <input id="datepicker" type="text" placeholder="Quand?" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                    <div class="picto">
                                        <i class="far fa-calendar-alt fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group">
                                <div class="selector">
                                    <input class="typesalle"  type="text" placeholder="Type de salle" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                    <div class="picto">
                                        <i class="fab fa-typo3"></i>
                                    </div>
                                </div>
                            </div>
                            <button type="button" class="valid btn btn-outline-success">rechercher</button>
                        </div>
                    </div>
                </div>
            {% endblock %}
            {# END SEARCHBAR #}
        </div>
        {# BOUTTON SCROLL#}
        <div class="button-scroll">
            <a href="#product" class="js-scroll-trigger">
                <i class="fa fa-angle-double-down animated"></i>
            </a>
        </div>
    </header>
